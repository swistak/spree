<% content_for :head do %>
  <%= stylesheet_link_tag 'reports' %>
<% end %>
<h1><%= t("listing_reports") %></h1>

<div id="reports">
  <h3><%= t(:available_reports) %></h3>

  <h4 style="margin-bottom:0;"><%= t(:saved_reports) %></h4>
  <table class="index">
    <tr>
      <th><%= t("name") %></th>
      <th><%= t("display") %></th>
      <th></th>
    </tr>
    <% @reports.each do |report| %>
      <tr id="<%= dom_id(report) %>">
        <td><%= report.to_s %></td>
        <td>
          <%= links_to_report(report) %>
        </td>
        <td>
          <%=  link_to_with_icon('edit', t("edit"), edit_admin_report_path(report))  %>
          &nbsp;
          <%= link_to_delete(report, {:url => admin_report_path(report) }) %>

        </td>

      </tr>
    <% end %>
  </table>

