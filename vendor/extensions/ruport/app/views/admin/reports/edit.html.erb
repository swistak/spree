<% content_for :head do %>
  <%= stylesheet_link_tag 'reports' %>
<% end %>

<div id="new_report" class="horizontal">
  <h3><%= t(:edit_report) %></h3>
  <% form_for @report, :url => {:action => :edit} do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>
  <% end %>
  <br style="clear: both" />
</div>

<div id="report">
  <%= @rendered_report %>
</div>
